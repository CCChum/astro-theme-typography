---
import { themeConfig } from '@/config'
import LayoutDefault from '@/layouts/LayoutDefault.astro'

const { admin } = themeConfig
---

<LayoutDefault title="Login">
  <div class="flex min-h-screen items-center justify-center">
    <div class="w-full max-w-sm rounded-lg border p-6 shadow-md">
      <h1 class="mb-6 text-2xl font-bold">Login</h1>
      {
        admin?.enabled && (
          <form action="/api/auth/login" method="post">
            <div class="mb-4">
              <label for="username" class="mb-2 block text-sm font-medium">
                Username
              </label>
              <input
                type="text"
                id="username"
                name="username"
                class="w-full rounded-lg border px-3 py-2"
                required
              />
            </div>
            <div class="mb-6">
              <label for="password" class="mb-2 block text-sm font-medium">
                Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                class="w-full rounded-lg border px-3 py-2"
                required
              />
            </div>
            <button
              type="submit"
              class="w-full rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700"
            >
              Login
            </button>
          </form>
        )
      }
    </div>
  </div>
</LayoutDefault>
