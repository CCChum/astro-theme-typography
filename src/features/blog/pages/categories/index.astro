---
import type { Language } from '@/i18n'
import { themeConfig } from '@/config/default'
import LayoutDefault from '@/layouts/LayoutDefault.astro'
import { t } from '@/i18n'

const { categoryMap } = themeConfig.site
const categories = Array.isArray(categoryMap) ? categoryMap : []

const locale = Astro.locals.language as Language
---

<LayoutDefault>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">
      {t('meta.categories', locale)}
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category) => (
        <a
          href={`/categories/${category.path}`}
          class="block p-6 bg-white rounded-lg shadow hover:shadow-md transition-shadow duration-200"
        >
          <h2 class="text-xl font-semibold mb-2">{category.name}</h2>
          <p class="text-gray-600">
            {category.path}
          </p>
        </a>
      ))}
    </div>
  </div>
</LayoutDefault>
