---
import { themeConfig } from '@/config'
import LayoutDefault from '@/layouts/LayoutDefault.astro'
import { useTranslations } from '@/i18n'
import type { Language } from '@/i18n'

const locale = (Astro.locals.locale || 'en') as Language
const { t } = useTranslations(locale)
---

<LayoutDefault config={themeConfig}>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{t('categories.title')}</h1>
    <div class="grid gap-4">
      {themeConfig.categoryMap.map(({ name, value }) => (
        <a
          href={`/categories/${value}`}
          class="p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow"
        >
          <h2 class="text-xl font-semibold">{name}</h2>
        </a>
      ))}
    </div>
  </div>
</LayoutDefault>
