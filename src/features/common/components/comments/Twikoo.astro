---
import type { TwikooConfig } from '@/types'

export interface Props extends TwikooConfig {
  path?: string
}

const { envId, region, path, lang } = Astro.props
---

<div id="twikoo"></div>

<script define:vars={{ envId, region, path, lang }}>
  window.addEventListener('load', () => {
    twikoo.init({
      envId,
      region,
      path,
      lang
    })
  })
</script>

<script src="https://cdn.jsdelivr.net/npm/twikoo@1.6.16/dist/twikoo.all.min.js"></script>

<style is:global>
  .tk-meta-input {
    background-color: white;
  }
</style>
