---
import { themeConfig } from '@/config'
import { useTranslations } from '@/i18n'
import ThemeToggle from './ThemeToggle.astro'
import SiteTitle from './SiteTitle.astro'
import SiteNavigation from './SiteNavigation.astro'

const { language } = Astro.locals
const { t } = useTranslations(language || 'en')
---

<header class="sticky top-0 z-40 w-full border-b border-gray-200 bg-white/80 backdrop-blur dark:border-gray-800 dark:bg-gray-900/80">
  <div class="container mx-auto px-4">
    <nav class="flex h-16 items-center justify-between">
      <SiteTitle />
      
      <div class="flex items-center gap-4">
        <SiteNavigation />
        <ThemeToggle />
      </div>
    </nav>
  </div>
</header>
