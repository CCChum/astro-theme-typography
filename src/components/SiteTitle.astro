---
import { themeConfig } from '@/config'

const { title, subtitle } = themeConfig.site
---

<a href="/" class="flex items-center space-x-2">
  <span class="text-xl font-bold tracking-tight hover:text-primary dark:text-white">
    {title}
  </span>
  {subtitle && (
    <span class="hidden text-sm text-gray-500 dark:text-gray-400 sm:inline-block">
      {subtitle}
    </span>
  )}
</a>
