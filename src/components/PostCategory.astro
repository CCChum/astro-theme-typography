---
import type { ThemeConfig } from '@/types'

export interface Props {
  category: string
  config: ThemeConfig
}

const { category, config } = Astro.props
const displayName = config.site.categoryMap[category] || category
const categoryPath = `/categories/${category}/`
---

<a href={categoryPath} class="hover:text-primary">
  {displayName}
</a>
